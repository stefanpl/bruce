  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "server – docker",
      "protocol": "inspector",
      "port": 9233,
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app",
      "restart": true,
      "outFiles": [ "${workspaceFolder}/dist/app.compiled*" ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**",
      ],
    },
    {
      "type": "node",
      "request": "attach",
      "name": "tests – docker",
      "protocol": "inspector",
      "preLaunchTask": "docker test debugging",
      "port": 9234,
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app",
      "restart": true,
      "outFiles": [ "${workspaceFolder}/dist/tests.compiled*" ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**",
      ],
    },
    {
      "type": "node",
      "request": "attach",
      "name": "tests – local",
      "protocol": "inspector",
      "preLaunchTask": "local test debugging",
      "port": 9231,
      "sourceMaps": true,
      "restart": true,
      "outFiles": [ "${workspaceFolder}/dist/tests.compiled*" ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**",
      ],
    },
  ]
}