{
  "name": "bruce",
  "version": "0.0.1",
  "description": "Bruce is your friendly, powerful digital assistant",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "prod": "npm run production",
    "development": "NODE_ENV=development npx webpack --mode=development",
    "watch": "NODE_ENV=development npx webpack --mode=development --watch",
    "production": "NODE_ENV=production npx webpack --mode=production",
    "restart-server-on-change": "SHELL=/bin/bash npx chokidar dist/* -c 'pm2 restart bruce'",
    "start-server": "pm2 start dist/app.compiled.js --name bruce",
    "test": "NODE_ENV=testing npx mocha dist/tests.compiled.js",
    "test-debug": "NODE_ENV=testing node --inspect-brk=127.0.0.1:9231 ./node_modules/mocha/bin/_mocha --no-timeouts dist/tests.compiled.js"
  },
  "author": "spl",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.14.8",
    "@types/promise-retry": "^1.1.3",
    "ajv": "^6.12.3",
    "await-busboy": "^1.0.3",
    "axios": ">=0.19.0",
    "bash-utils": "git+https://github.com/stefanpl/bash-utils.git",
    "busboy": "^0.3.1",
    "camelcase": "^5.3.1",
    "chai": "^4.2.0",
    "chokidar-cli": "^1.2.2",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "i3": "^0.2.1",
    "i3wm": "^1.1.0",
    "json-schema": "^0.2.5",
    "json-schema-to-typescript": "^6.1.3",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-cors": "0.0.16",
    "koa-route": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-router-joi": "^1.0.1",
    "laradock-with-package-json": "git+https://github.com/stefanpl/laradock-with-package-json.git",
    "lodash-es": "^4.17.14",
    "mocha": "^5.2.0",
    "mustache": "^3.0.1",
    "promise-retry": "^1.1.1",
    "sudo-prompt": "^8.2.5",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "why-is-node-running": "^2.1.0"
  }
}
